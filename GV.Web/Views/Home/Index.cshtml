@section css {
    <link href="~/app/components/home/home.css" rel="stylesheet" />
    <link href="~/app/assets/plugins/angular-slick-carousel/slick-1.8.1/slick/slick.css" rel="stylesheet" />
    <link href="~/app/assets/plugins/angular-slick-carousel/slick-1.8.1/slick/slick-theme.css" rel="stylesheet" />
    <link href="~/app/assets/plugins/OwlCarousel2-2.3.4/dist/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/app/assets/plugins/OwlCarousel2-2.3.4/dist/assets/owl.theme.default.min.css" rel="stylesheet" />
}
<!-- BEGIN CONTENT -->
<div class="page-content" ng-controller="homeCtrl">
    <div class="owl-carousel">
        <div class="hero">
            <div class="hero--image">
                <img src="~/app/assets/imgs/home-hero.jpg" alt="hero image"/>
            </div>
            <div class="hero--text">
                <h1 class="title" ng-bind-html="locale.hero.title[selectedLanguage.value]">
                </h1>
                <p class="desc">
                    {{locale.hero.desc[selectedLanguage.value]}}
                </p>
            </div>
        </div>
        <div class="hero">
            <div class="hero--image">
                <img src="~/app/assets/imgs/home-hero.jpg" alt="hero image"/>
            </div>
            <div class="hero--text">
                <h1 class="title" ng-bind-html="locale.hero.title[selectedLanguage.value]">
                </h1>
                <p class="desc">
                    {{locale.hero.desc[selectedLanguage.value]}}
                </p>
            </div>
        </div>
    </div>
    

    <div class="gv-section">
        <div class="gv-section--title">
            {{locale.section.services.title[selectedLanguage.value]}}
        </div>
        <div class="gv-section--body">
            <ul class="service-categories">
                <li ng-repeat="c in servicesCategories"
                    class="service-item">
                    <a title="{{c.Name}}"
                       href="{{c.Url}}">
                        <span class="service-item--image">
                            <img class="normal" ng-src="{{c.Image}}" alt="Image"/>
                            <img class="hover" ng-src="{{c.HoverImage}}" alt="Image hover"/>
                        </span>
                        <span class="service-item--text">
                            {{c.Name}}
                        </span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="gv-section">
        <div class="gv-section--title">
            {{locale.section.news.title[selectedLanguage.value]}}
        </div>
        <div class="gv-section--body article--wrapper">
            <p ng-if="regulationArticles.length == 0">
                {{locale.section.news.noArticles[selectedLanguage.value]}}
            </p>
            <div class="arrow left">
                <a href="javascript:;" ng-click="getPrevNews()">
                    <i class="fa fa-chevron-left"></i>
                </a>
            </div>
            <div ng-repeat="article in regulationArticles"
                 class="article"
                 ng-if="regulationArticles.length > 0">
                <div class="article--thumbnail">
                    <a href="{{getArticleUrl(article)}}">
                        <img ng-src="{{article.Thumbnail}}"/>
                    </a>
                </div>
                <div class="article--info">
                    <div class="article--title">
                        <a href="{{getArticleUrl(article)}}">
                            {{article.Name.toLowerCase()}}
                        </a>
                    </div>
                    <div class="article--description">
                        {{article.Description}}
                    </div>
                </div>
            </div>
            <div class="arrow right">
                <a href="javascript:;" ng-click="getNextNews()">
                    <i class="fa fa-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="gv-section">
        <div class="gv-section--title">
            {{locale.section.clients.title[selectedLanguage.value]}}
        </div>
        <div class="gv-section--body clients-section--wrapper">
            <div slick settings="slickConfig" ng-if="clientLoaded" class="clients-section">
                <div ng-repeat="c in clients" class="client-item">
                    <img ng-src="{{c.Url}}" class="client-item--image"/>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END CONTENT -->

@section plugin {
    <script src="~/app/assets/plugins/angular-slick-carousel/slick-1.8.1/slick/slick.min.js"></script>
    <script src="~/app/assets/plugins/angular-slick-carousel/angular-slick.min.js"></script>
    <script src="~/app/assets/plugins/OwlCarousel2-2.3.4/dist/owl.carousel.min.js"></script>
}

@section js {
    <script src="~/app/components/home/home.js"></script>
    <script>
        $(document).ready(function() {
            $(".owl-carousel").owlCarousel({
                items: 1,
                loop: true,
                slideTransition: 'linear',
                dots: false,
                autoplay: true,
                autoplayTimeout: 5000,
                animateOut: 'slideOutDown',
                animateIn: 'flipInX'
            });
        });
    </script>
}