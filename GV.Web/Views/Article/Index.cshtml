<style>
    .a__thumbnail {
        height: 250px;
    }
    .a__thumbnail > img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .flex-parent {
        display: flex;
        align-items: center;
    }

    li.flex-parent:before {
        height: initial !important;
    }

    .long-and-truncated {
        flex: 1;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
<div class="c-layout-page" ng-controller="articleCtrl">
    <!-- BEGIN: LAYOUT/BREADCRUMBS/BREADCRUMBS-1 -->
    <div class="c-layout-breadcrumbs-1 c-fonts-uppercase c-fonts-bold c-bordered c-bordered-both">
        <div class="container">
            <div class="c-page-title c-pull-left">
                <h3 class="c-font-uppercase c-font-bold">{{labels[selectedLanguage.value].pageTitle}}</h3>
            </div>
            <ul class="c-page-breadcrumbs c-theme-nav c-pull-right c-fonts-regular">
                <li>
                    <a href="/">{{labels[selectedLanguage.value].homeTitle}}</a>
                </li>
                <li>
                    /
                </li>
                <li class="c-state_active">
                    {{labels[selectedLanguage.value].pageTitle}}
                </li>
            </ul>
        </div>
    </div>
    <!-- END: LAYOUT/BREADCRUMBS/BREADCRUMBS-1 -->

    <div class="c-content-box c-size-md">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="c-content-blog-post-1-view">
                        <div class="c-content-blog-post-1">
                            <div class="c-media a__thumbnail" ng-if="article.Thumbnail">
                                <img src="{{article.Thumbnail}}"/>
                            </div>
                            <div class="c-title c-font-bold c-font-uppercase">
                                <a href="#">{{article.Name}}</a>
                            </div>
                            
                            <div class="c-desc" ng-bind-html="trustArticleContent()"> 
                                
                            </div>
                            
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <!-- BEGIN: CONTENT/BLOG/BLOG-SIDEBAR-1 -->
                    
                    <div class="c-content-ver-nav">
                        <div class="c-content-title-1 c-theme c-title-md c-margin-t-40">
                            <h3 class="c-font-bold c-font-uppercase">{{labels[selectedLanguage.value].categoriesTitle}}</h3>
                            <div class="c-line-left c-theme-bg">
                            </div>
                        </div>
                        <ul class="c-menu c-arrow-dot1 c-theme">
                            <li ng-repeat="c in subCategories"
                                class="flex-parent">
                                <a href="/category?id={{c.Id}}" title="{{c.Name}}"
                                   class="long-and-truncated">{{c.Name}}</a>
                            </li>
                        </ul>
                    </div>
                    
                    <!-- END: CONTENT/BLOG/BLOG-SIDEBAR-1 -->
                </div>
            </div>
        </div>
    </div>
</div>
@section js {
    <script src="~/app/components/article/article.js"></script>
}