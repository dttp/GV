<div ng-controller="dataListTypeAddEditCtrl" >
    <!-- BEGIN PAGE HEADER-->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="/">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="/setup">Setup & Configuration</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="/datalist">DataList</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Add/Edit</span>
            </li>
        </ul>

    </div>
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title">
        DataList Type
        <small>Add/Edit datalist type</small>
    </h1>
    <!-- END PAGE TITLE-->
    <!-- END PAGE HEADER-->    
    <div class="row"> 
            <form name="datalistTypeForm" class="form form-horizontal" novalidate>
                <div class="form-body" ng-class="{'disableEdit' : !(hasPermission('Create', objectType) || hasPermission('Edit', objectType) || hasPermission('Delete', objectType))}">
                    <div class="form-group" ng-class="{'has-error': hasError(datalistTypeForm.name, 'required')}">
                        <label class="col-md-3 control-label">Name</label>
                        <div class="col-md-4">
                            <div class="input-icon right">
                                <i class="fa fa-warning" ng-show="hasError(datalistTypeForm.name, 'required')"></i>
                                <input type="text" maxlength="100" class="form-control" name="name" placeholder="Enter datalist type name here" ng-change="validateForm()" ng-model="type.Name" required/>
                            </div>
                            <span class="help-block" ng-show="hasError(datalistTypeForm.name, 'required')">DataList Type name is required</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Description</label>
                        <div class="col-md-4">
                            <input type="text" maxlength="255" class="form-control" name="description" ng-change="validateForm()" placeholder="Enter datalist type description here" ng-model="type.Description"/>
                        </div>
                    </div>
                    <h4 class="form-section">Fields</h4>
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn blue-steel btn-outline" ng-disabled="!hasPermission('Create', objectType)" ng-click="createField()"><i class="fa fa-plus"></i> New</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-scrollable">
                                <table name="tableDataList" class="table table-hover table-condensed table-light">
                                    <thead>
                                        <tr>
                                            <th> Name </th>
                                            <th style="width: 180px"> Actions </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-if="type.Fields.length == 0">
                                            <td colspan="4">There are no fields</td>
                                        </tr>
                                        <tr ng-repeat="field in type.Fields">
                                            <td>{{field.Name}}</td>
                                            <td>
                                                <button class="btn btn-xs blue-madison btn-outline" ng-click="edit(field)" ng-disabled="!hasPermission('Edit', objectType)" ><i class="fa fa-edit"></i> Edit</button>
                                                <button class="btn btn-xs red-flamingo btn-outline" ng-click="delete(field)" ng-disabled="!hasPermission('Delete', objectType)" ><i class="fa fa-remove"></i> Delete</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-4">
                            <button type="submit" class="btn btn-primary" ng-click="submit()" ng-disabled="!datalistTypeForm.$dirty">Submit</button>
                            <button type="button" class="btn default" ng-click="cancel()">Cancel</button>
                        </div>
                    </div>
                </div>
            </form> 
    </div>
    <script type="text/ng-template" id="dataListTypefieldModal.html">
        <div class="modal-header">
            <button type="button" class="close" ng-click="cancel()"></button>
            <h3 class="modal-title">Field information!</h3>
        </div>
        <div class="modal-body">
            <form name="fieldForm" class="form-horizontal" novalidate>
                <div class="form-body">
                    <div class="form-group" ng-class="{'has-error': hasError(fieldForm.name, 'invalid') || isNameExists}">
                        <label class="col-md-3 control-label">Name</label>
                        <div class="col-md-8">
                            <div class="input-icon right">
                                <i class="fa fa-warning" ng-show="hasError(fieldForm.name, 'invalid')"></i>
                                <input type="text" maxlength="100" class="form-control" name="name" placeholder="Enter field name here" ng-change="fieldChange()" ng-model="field.Name" required ng-pattern="namePattern" />
                            </div>
                            <span class="help-block" ng-show="hasError(fieldForm.name, 'required')">Field name is required</span>
                            <span class="help-block" ng-show="isNameExists">Field name '{{field.Name}}' already exists!</span>
                            <span class="help-block" ng-show="hasError(fieldForm.name, 'pattern')">Field name must be a string contains alphabet characters only</span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn blue" ng-disabled="fieldForm.$invalid || !fieldForm.$dirty" type="button" ng-click="ok()">Ok</button>
            <button class="btn btn-default" type="button" ng-click="cancel()">Cancel</button>
        </div>
    </script>
</div>

@section js {
    <script src="~/app/components/datalist/datalist.addedit.js"></script>
}