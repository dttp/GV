<head>
    <meta charset="utf-8" />
    <title>GVCompany | Administrator </title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="GV Company" name="description" />
    <meta content="" name="author" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!--begin::Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap" rel="stylesheet">

    <!--end::Fonts -->
    <!--begin::Page Custom Styles(used by this page) -->
    <link href="~/app/assets/m618/assets/css/pages/login/login-3.css" rel="stylesheet" type="text/css" />

    <!--end::Page Custom Styles -->
    <!--end::Page Vendors Styles -->
    <!--begin::Global Theme Styles(used by all pages) -->
    <link href="~/app/assets/m618/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/app/assets/m618/assets/css/style.bundle.css" rel="stylesheet" type="text/css" />

    <!--begin::Layout Skins(used by all pages) -->
    <link href="~/app/assets/m618/assets/css/skins/header/base/light.css" rel="stylesheet" type="text/css" />
    <link href="~/app/assets/m618/assets/css/skins/header/menu/light.css" rel="stylesheet" type="text/css" />
    <link href="~/app/assets/m618/assets/css/skins/brand/light.css" rel="stylesheet" type="text/css" />
    <link href="~/app/assets/m618/assets/css/skins/aside/light.css" rel="stylesheet" type="text/css" />


    @*<link href="~/app/assets/plugins/angular-toastr/angular-toastr.min.css" rel="stylesheet" />*@
    <link href="~/app/assets/plugins/angular-loading-bar/loading-bar.min.css" rel="stylesheet" />
