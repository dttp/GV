<div ng-controller="cachelistCtrl">
    <!-- BEGIN PAGE HEADER-->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="/">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="/setup">Setup & Configuration</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Cache</span>
            </li>
        </ul>

    </div>
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title">
        Cache
        <small>Manage Cache</small>
    </h1>
    <!-- END PAGE TITLE-->
    <!-- END PAGE HEADER-->
    <div class="row">
        <div class="col-md-6">
            <button class="btn red-flamingo btn-outline" ng-click="deleteall()" ng-disabled="!hasPermission('Delete', objectType)"><i class="fa fa-remove"></i>&nbsp;Delete All</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-scrollable">
                <table class="table table-hover table-condensed table-light">
                    <thead>
                        <tr>
                            <th>Key</th>
                            <th style="width: 100px"> Actions </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-if="keys.length == 0">
                            <td colspan="4">There are no cache key</td>
                        </tr>
                        <tr ng-repeat="key in keys">
                            <td>{{key}}</td>
                            <td>
                                <button class="btn btn-xs red-flamingo btn-outline" ng-click="delete(key)" ng-disabled="!hasPermission('Delete', objectType)"><i class="fa fa-remove"></i>&nbsp;Delete</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section js{
    <script src="~/app/components/cache/cache.list.js"></script>
}