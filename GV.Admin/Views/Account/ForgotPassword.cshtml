<body class=" login" ng-app="ucms.app.forgotpassword" ng-controller="forgotPasswordCtrl" ng-init="init()">
    <div id="AUTHORIZATION_SERVER_ENDPOINT_ID" style="display:none;">@UCMS.Core.UCMSConfiguration.Instance.UCMSAuthorizationServer</div>
    <div id="WEBAPI_ENDPOINT_ID" style="display:none;">@UCMS.Core.UCMSConfiguration.Instance.UCMSWebAPIAddress</div>
    <div id="UPLOADSIZELIMIT_ID" style="display:none;">@UCMS.Core.UCMSConfiguration.Instance.UploadSizeLimit</div>
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="">
            <img src="~/app/assets/images/imip-logo.png" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form class="login-form">
            <h3 class="form-title font-green">Forgot password</h3>
            <div class="step1" ng-hide="user && user.Id">
                <div class="alert alert-danger" ng-show="errorMessage && errorMessage != ''">
                    <button class="close" data-close="alert"></button>
                    <span> {{errorMessage}} </span>
                </div>
                <p>Please enter your user name here and click on button to get reset password information via your registered email.</p>
                <div class="form-group">
                    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                    <label class="control-label visible-ie8 visible-ie9">Username</label>
                    <input class="form-control form-control-solid placeholder-no-fix"
                           type="text" maxlength="100"
                           autocomplete="off"
                           placeholder="Username"
                           name="username"
                           ng-model="username" />
                </div>
                <div class="form-actions" style="text-align: right">
                    <button type="button" class="btn green" ng-hide="loading" ng-click="submitUsername()" ng-disabled="hasError()">Submit</button>
                    <img src="~/app/assets/images/signingin.gif" ng-show="loading" />
                </div>
            </div>

            <div class="lock-cont ng-hide step2" ng-show="user && user.Id">
                <div class="lock-item">
                    <div class="pull-left lock-avatar-block">
                        <img ng-if="!user || !user.Avatar || user.Avatar == ''" src="~/app/assets/images/user.png" class="lock-avatar">
                        <img ng-if="user && user.Avatar && user.Avatar != ''" ng-src="{{user.Avatar}}" class="lock-avatar">
                    </div>
                </div>
                <div class="lock-item lock-item-full success-message pull-right">
                    <h4 class="form-title">{{user.FullName}}</h4>
                    <p>An email has been sent to your email address with detail instruction on how to reset your password.</p>
                </div>
            </div>
        </form>
        <!-- END LOGIN FORM -->
        <!-- BEGIN FORGOT PASSWORD FORM -->
        <!-- END FORGOT PASSWORD FORM -->
    </div>
    <div class="copyright"> 2017 © Imipgroup.com </div>

    <!-- BEGIN CORE PLUGINS -->
    <script src="~/app/assets/js/const.js"></script>
    <script src="~/app/assets/plugins/jquery-2.2.4/jquery.js"></script>
    <script src="~/app/assets/plugins/bootstrap-3.3.6/js/bootstrap.min.js"></script>
    <script src="~/app/assets/plugins/angularjs-1.6.4/angular.min.js"></script>
    <script src="~/app/assets/plugins/angularjs-1.6.4/angular-animate.min.js"></script>

    <!-- END CORE PLUGINS -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="~/app/assets/plugins/angular-cookie/angular-cookie.min.js"></script>
    <script src="~/app/assets/plugins/ngstorage/ngStorage.min.js"></script>
    <script src="~/app/directives/ngEnter.js"></script>
    <script src="~/app/services/alertService.js"></script>
    <script src="~/app/services/xhttpService.js"></script>

    <script src="~/app/assets/plugins/angular-toastr/angular-toastr.tpls.js"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN THEME GLOBAL SCRIPTS -->
    <script src="~/app/assets/m4.7/global/scripts/app.js"></script>
    <!-- END THEME GLOBAL SCRIPTS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="~/app/components/account/forgorpassword.js" type="text/javascript"></script>
    <script src="~/app/services/userSvc.js"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
    <!-- BEGIN THEME LAYOUT SCRIPTS -->
    <!-- END THEME LAYOUT SCRIPTS -->
