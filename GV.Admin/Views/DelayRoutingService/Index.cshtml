<div ng-controller="apsCtrl">
    <!-- BEGIN PAGE HEADER-->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="/">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Delay Routing Service</span>
            </li>
        </ul>

    </div>
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title">
        Delay Routing Service
        <small>Display all instance of the delay routing service</small>
    </h1>
    <!-- END PAGE TITLE-->
    <!-- END PAGE HEADER-->
    <div class="row">
        <div class="col-md-12">
            <div class="table-scrollable">
                <table class="table table-hover table-condensed table-light">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th style="width: 220px"> Is running </th>
                            <th style="width: 220px"> LastUpdated </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-if="!services || services.length == 0">
                            <td colspan="2">There are no items</td>
                        </tr>
                        <tr ng-repeat="service in services">
                            <td>{{service.Name}}</td>
                            <td>
                                <i class="fa fa-check ng-hide" ng-show="service.Status == 'Alive'"></i>
                                <i class="fa fa-close ng-hide" ng-show="service.Status != 'Alive'"></i>
                            <td>{{service.LastUpdated}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section js {
    <script src="~/app/components/delayroutingservice/delayroutingservice.list.js"></script>
}